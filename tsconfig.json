{
  "extends": "@1stg/tsconfig/angular",
  "include": [
    "./.storybook/*.ts",
    "src",
    "stories",
    "jest.config.ts",
    "jest.setup.ts"
  ],
  "exclude": ["dist", "release", "**/*.spec.ts"],
  "compilerOptions": {
    "target": "ES2022",
    "esModuleInterop": true,
    "paths": {
      "@alauda/ui": ["./src"]
    },
    "strictNullChecks": false
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
